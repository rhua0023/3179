{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Renewable Energy per GDP per capita of 2020",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://github.com/rhua0023/3179/blob/main/Week9_Homework/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "gray"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "Week9_Homework/data/energy.csv"
            },
            "key": "Country",
            "fields": ["Energy"]
          }
        },
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "Week9_Homework/data/GDP.csv"
            },
            "key": "Country",
            "fields": ["GDP_per_capita_USD"]
          }
        },
        { "calculate" : "datum.Energy/datum.GDP_per_capita_USD" , "as" : "Energy per GDP per capita (in USD)" }
      ],
      "mark": {"type": "geoshape", "stroke": "grey"},
      "encoding": {
        "color": {
          "field": "Energy per GDP per capita (in USD)",
          "type": "quantitative"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Energy per GDP per capita (in USD)", "type": "quantitative", "format" : ".2f" }
        ]
      }
    }
  ],
  "config": {}
}
